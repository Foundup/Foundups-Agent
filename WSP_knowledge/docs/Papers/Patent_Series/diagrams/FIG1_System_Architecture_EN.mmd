    end

    G["<b>0. VI Scaffolding</b><br>(Output Formation / 'The Screen')"]
    
    H["<b>0. Output</b>"]

    A --> B
    B --> C
    C --> D
    D -- "Yes" --> E
    D -- "No" --> F
    E --> G
    F --> G
    G --> H

