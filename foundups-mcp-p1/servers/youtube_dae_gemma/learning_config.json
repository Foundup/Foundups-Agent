{
  "training_data_sources": [
    "memory/*.txt",
    "WSP_framework/src/",
    "modules/communication/livechat/_archive/"
  ],
  "evaluation_metrics": [
    "intent_accuracy",
    "response_quality",
    "processing_speed",
    "user_satisfaction"
