#!/usr/bin/env python3
"""
Fix emoji characters in MCP manager for better compatibility
"""

# Read the file
with open('modules/infrastructure/mcp_manager/src/mcp_manager.py', 'r', encoding='utf-8') as f:
    content = f.read()

# Define emoji replacements
replacements = {
    'âœ…': '[OK]',
    'âŒ': '[FAIL]',
    'ğŸš€': '[START]',
    'ğŸ›‘': '[STOP]',
    'ğŸ”„': '[RESTART]',
    'ğŸ¥': '[HEALTH]',
    'ğŸ§ª': '[TEST]',
    'ğŸ¤–': '[AI]',
    'ğŸ“‹': '[LOGS]',
    'ğŸ“Š': '[METRICS]',
    'ğŸ§ ': '[MEMORY]',
    'ğŸ”—': '[DEPS]',
    'âš™ï¸': '[CONFIG]',
    'ğŸ¯': '[TARGET]',
    'ğŸ®': '[GAME]',
    'ğŸ­': '[FACTORY]',
    'ğŸ”§': '[TOOLS]',
    'âš ï¸': '[WARN]',
    'ğŸ—‚ï¸': '[FILE]',
    'ğŸ‰': '[SUCCESS]',
    'ğŸ’¡': '[TIP]',
    'ğŸ¼': '[WORKFLOW]',
}

# Apply replacements
for emoji, text in replacements.items():
    content = content.replace(emoji, text)

# Write back
with open('modules/infrastructure/mcp_manager/src/mcp_manager.py', 'w', encoding='utf-8') as f:
    f.write(content)

print('All emojis replaced with text equivalents')
